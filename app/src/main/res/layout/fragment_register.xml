<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Toolbar-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBarRegister"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <!--Content-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@drawable/rectangle_160"
            android:layout_margin="@dimen/magin"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--photo-->
            <ImageView
                android:id="@+id/imvPhoto"
                android:layout_width="wrap_content"
                android:layout_height="228dp"
                android:layout_gravity="center"
                android:src="@drawable/bg_clear" />

            <!--name-->
            <EditText
                android:id="@+id/edtName"
                android:inputType="text"
                android:hint="Name"
                android:background="@drawable/text_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <!--user-->
            <EditText
                android:id="@+id/edtEmail"
                android:inputType="textEmailAddress"
                android:hint="Email"
                android:background="@drawable/textfield_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <!--password-->
            <EditText
                android:id="@+id/edtPassword"
                android:inputType="text"
                android:hint="Password"
                android:background="@drawable/textfield_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>